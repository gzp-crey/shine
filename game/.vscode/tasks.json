{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build native",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "-p",
                "shine-native"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "run native",
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "-p",
                "shine-native"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "build wasm",
            "type": "shell",
            "command": "wasm-pack",
            "args": [
                "build",
                "--dev"
            ],
            "options": {
                "cwd": "wasmgame"
            },
            "presentation": {
                "echo": true, 
                "reveal": "always",
                "focus": false,
                "clear": true,
            },
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        }
    ]
}